<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.meeple.meeple.Fragments.MainPageFragment">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/event_tags"
        android:hint="@+id/tags_default"
        android:layout_below="@+id/event_tags"
        android:layout_centerHorizontal="true" />

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/event_tags"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_button"
        android:id="@+id/event_search_button"
        android:layout_below="@+id/listView"
        android:layout_centerHorizontal="true"/>

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_below="@+id/event_search_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
